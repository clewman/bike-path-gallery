@{
        Layout = null;


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1> @ViewBag.SeriesTitle</h1>
        <h2> Issue #:@ViewBag.IssueNumber</h2>
        <h5> Description: </h5>
        <div>
            @Html.Raw(ViewBag.Description)
        </div>

        @if (ViewBag.Riders.Length > 0)
        {
            <h5>Riders:</h5>
            <div>
                <ul>
                    @foreach (var rider in ViewBag.Riders)
                    {
                        <li> @rider</li>
                    }
                </ul>
            </div>
        }

    </div>
</body>
</html>
